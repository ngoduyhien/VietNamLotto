<body class="animated fadeInDown">

    <header id="header">

        <div id="logo-group">
            <span id="logo"> <img src="~/Content/img/logo.png" alt="Card Report System"> </span>
        </div>
        @if (ViewContext.RouteData.Values["controller"].ToString() == "Login" && ViewContext.RouteData.Values["action"].ToString() == "Register")
        {
               <span id="extr-page-header-space"> <span class="hidden-mobile hiddex-xs">Already registered?</span> <a href="/Login/" class="btn btn-danger">Sign in</a> </span> 
        }
        else if (ViewContext.RouteData.Values["controller"].ToString() == "Login" && ViewContext.RouteData.Values["action"].ToString() == "Index")
        {
             <span id="extr-page-header-space"> <span class="hidden-mobile hiddex-xs">Need an account?</span> <a href="/Login/Register" class="btn btn-danger">Create account</a> </span>
            
        }
     

    </header>

    <div id="main" role="main">

        <!-- MAIN CONTENT -->
      
        @RenderBody();
